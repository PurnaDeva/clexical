{sys, [
    {lib_dirs, ["../deps", "../apps"]},
    {rel, "clexical", git, [
        kernel,
        stdlib,
        sasl,
  	    inets,
  	    crypto,
  	    lager,
        syslog,
        mnesia,
        ranch,
        cowboy,
        riakc,
        riak_pb,
        protobuffs,
        clexical
    ]},
    {rel, "start_clean", "", [
        kernel,
        stdlib
    ]},
    {boot_rel, "clexical"},
    {profile, embedded},
    {incl_cond, exclude},
    {excl_archive_filters, [".*"]}, %% Do not archive built libs
    {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                        "^erts.*/(doc|info|include|lib|man|src)"]},
    {excl_app_filters, ["\.gitignore"]},
    {app, sasl,   [{incl_cond, include}]},
    {app, stdlib, [{incl_cond, include}]},
    {app, kernel, [{incl_cond, include}]},
    {app, compiler, [{incl_cond, include}]},
    {app, inets, [{incl_cond, include}]},
    {app, syntax_tools, [{incl_cond, include}]},
    {app, crypto, [{incl_cond, include}]},
    {app, lager, [{incl_cond, include}]},
    {app, syslog, [{incl_cond, include}]},
    {app, mnesia, [{incl_cond, include}]},
    {app, ranch, [{incl_cond, include}]},
    {app, cowboy, [{incl_cond, include}]},
    {app, bbmustache, [{incl_cond, include}]},
    {app, riakc, [{incl_cond, include}]},
    {app, riak_pb, [{incl_cond, include}]},
    {app, protobuffs, [{incl_cond, include}]},
    {app, clexical, [{incl_cond, include}]},
    {app, ct_tools, [{incl_cond, exclude}]},
    {app, runtime_tools, [{mod_cond, app}, {incl_cond, include}]},
    {app, appmon, [{mod_cond, app}, {incl_cond, include}]}
]}.

{target_dir, "clexical"}.

{overlay_vars, "vars.config"}.

{overlay, [
    {mkdir, "log"},
    {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
    {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
    {copy, "files/clexical", "bin/clexical"},
    {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
    {template, "files/app.config", "etc/app.config"},
    {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
]}.

